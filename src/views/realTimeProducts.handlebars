<h2>Agregar Nuevo Producto</h2>
<form id="form">
    <label>Producto:</label> <input type="text" id="productName" placeholder="Producto" required>
    <label>Precio:</label> <input type="number" id="productPrice" placeholder="Precio" required>
    <input type="submit" value="Enviar">
</form>

<ul id="products">
    {{#each products}}
        <li>{{this.name}} - ${{this.price}}</li>
    {{/each}}
</ul>

<script src="/socket.io/socket.io.js"></script>
<script src="index.js"></script>
